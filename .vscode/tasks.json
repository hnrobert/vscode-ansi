// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "pnpm: watch",
			"command": "pnpm run watch",
			"problemMatcher": [
				{
					"owner": "tsup",
					"source": "tsup",
					"fileLocation": "autoDetect",
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Build start.*$",
						"endsPattern": "^.*Build success.*$"
					},
					"pattern": {
						"regexp": "^(.*):(\\d+):(\\d+): error: (.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4
					}
				}
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}